{
  "name": "frontendv3",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "tw:widgets:dev": "tailwindcss -i src/components/renderer/widgets/css/widgets.css -o src/components/renderer/widgets/css/widgets.build.css --watch",
    "tw:widgets:build": "tailwindcss -i src/components/renderer/widgets/css/widgets.css -o src/components/renderer/widgets/css/widgets.build.css --minify",
    "dev": "run-p tw:widgets:dev dev:vite",
    "dev:vite": "vite",
    "build": "npm run tw:widgets:build && run-p type-check \"build-only {@}\" --",
    "deploy": "npm run build && firebase deploy --only=hosting",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build --mode staging",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@primeuix/themes": "^1.2.3",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/vite": "^4.1.12",
    "@vueuse/core": "^13.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.1",
    "firebase": "^12.3.0",
    "core": "file:../core",
    "lodash-es": "^4.17.21",
    "lucide-vue-next": "^0.545.0",
    "luxon": "^3.7.2",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "tailwindcss-primeui": "^0.6.1",
    "tw-animate-css": "^1.4.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
